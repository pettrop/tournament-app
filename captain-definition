{
  "schemaVersion": 2,
  "dockerfileLines": [
    "FROM python:3.8-slim",
    "ENV PYTHONUNBUFFERED 1",
    "RUN mkdir /app",
    "WORKDIR /app",
    "COPY requirements.txt /app/",
    "RUN pip install --upgrade pip && pip install -r requirements.txt",
    "COPY webapp /app/",
    "CMD [\"gunicorn\", \"manage.wsgi:application\", \"--bind\", \"0.0.0.0:80\"]"
  ]
